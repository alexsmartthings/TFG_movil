<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/viewColorEstado"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#95a5a6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/lblMotoModelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yamaha MT-07"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"/>

            <TextView
                android:id="@+id/lblEstadoTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESTADO: PENDIENTE"
                android:textStyle="bold"
                android:textColor="#7f8c8d"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/lblAveriaResumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problema de arranque..."
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/lblFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/01/2026"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>